# Enhanced Diabetes Predictor - Environment Configuration

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-in-production-make-it-long-and-random

# Database Configuration
DATABASE_URL=sqlite:///health_predictor.db

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Application Settings
DEBUG=True
HOST=0.0.0.0
PORT=5000

# Health Tracking Configuration
DAILY_TASKS_RESET_HOUR=0
STREAK_CALCULATION_METHOD=consecutive_days


# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Feature Flags
ENABLE_AI_CHAT=True
ENABLE_GAMIFICATION=True
ENABLE_EXPORT=True
ENABLE_POPULATION_STATS=True

# Rate Limiting (requests per minute)
RATE_LIMIT_PREDICTION=10
RATE_LIMIT_CHAT=20
RATE_LIMIT_TASKS=30

# Model Configuration
MODEL_CONFIDENCE_THRESHOLD=0.7
PREDICTION_CACHE_TTL=3600

# UI Configuration
DEFAULT_THEME=light
ENABLE_DARK_MODE=True
SHOW_BETA_FEATURES=False